{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "lib": ["es2019", "ES2020", "esnext.asynciterable", "dom"],
    "module": "commonjs",
    "outDir": "build",
    "resolveJsonModule": true,
    "sourceMap": false,
    "target": "es2019",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "src/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    },
  },
  "paths": {
    "src/*": ["./src/*"],
    "@shared/*": ["../shared/src/*"]
  },
  "types": ["src/types"],
  "include": ["src"],
  "exclude": []
}
